<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="org.omadac.nom">
    <jta-data-source>osgi:service/javax.sql.DataSource</jta-data-source>
    <non-jta-data-source>osgi:service/javax.sql.DataSource</non-jta-data-source>
    <mapping-file>META-INF/nom.xml</mapping-file>
    <mapping-file>META-INF/osm.xml</mapping-file>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="openjpa.Log" value="DefaultLevel=INFO"/>
      <!--property name="openjpa.RuntimeUnenhancedClasses" value="supported"/-->
      <property name="openjpa.jdbc.DBDictionary" value="batchLimit=25"/>
      <property name="openjpa.jdbc.DBDictionary" 
                value="org.apache.openjpa.jdbc.sql.PostgresDictionary(storeCharsAsNumbers=false)"/>
    </properties>
  </persistence-unit>
</persistence>

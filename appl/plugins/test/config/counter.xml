<omadac xmlns="http://omadac.org/xsd/configuration" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <jobs>
    <job>
      <name>CounterMaker</name>
      <make>
        <goal>Counter</goal>
        <forced>Counter</forced>
      </make>
    </job>
    <manager>local</manager>
    <threads>1</threads>
  </jobs>
  
  <server>
    <jdbc>
      <driver>org.postgresql.Driver</driver>
      <subprotocol>postgresql</subprotocol>
      <server>localhost</server>
      <database>OmadacTest</database>
      <user>omadac</user>
      <password>omadac</password>
      <initialConnections>4</initialConnections>
      <maxConnections>8</maxConnections>
    </jdbc>
  </server>
  <tmpDir>/tmp</tmpDir>
</omadac>

<omadac xmlns="http://omadac.org/xsd/configuration" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <jobs>
    <job>
      <name>OsmToNomMaker</name>
      <make>
        <dotOutput>OsmToNomMaker.dot</dotOutput>
        <!--goal>NomNamedRoads</goal-->
        <goal>NomLinks</goal>
        <forced>NomSchema</forced>
      </make>
    </job>
    <manager>local</manager>
    <threads>4</threads>
  </jobs>
  
  <server>
    <jdbc>
      <driver>org.postgresql.Driver</driver>
      <subprotocol>postgresql</subprotocol>
      <server>localhost</server>
      <database>EimsbuettelOsm</database>
      <user>omadac</user>
      <password>omadac</password>
      <initialConnections>4</initialConnections>
      <maxConnections>8</maxConnections>
    </jdbc>
  </server>
  <tmpDir>/tmp</tmpDir>
</omadac>
